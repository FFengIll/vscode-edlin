{
    "name": "edlin",
    "displayName": "edlin",
    "description": "Trim, Remove, Split, Combine, Index for Line Edit (so it is Edlin)",
    "author": {
        "name": "FengYouzheng"
    },
    "repository": {
        "url": "https://github.com/FengYouzheng/vscode-edlin"
    },
    "version": "0.4.0",
    "publisher": "FengYouzheng",
    "engines": {
        "vscode": "^1.10.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:edlin.index",
        "onCommand:edlin.indexWith",
        "onCommand:edlin.trim",
        "onCommand:edlin.ltrim",
        "onCommand:edlin.rtrim",
        "onCommand:edlin.splitAndKeep",
        "onCommand:edlin.split",
        "onCommand:edlin.combine",
        "onCommand:edlin.combineWith",
        "onCommand:edlin.removeBlankLine"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "title": "Edlin",
        "commands": [
            {
                "category": "Edlin",
                "command": "edlin.index",
                "title": "Index"
            },
            {
                "category": "Edlin",
                "command": "edlin.indexWith",
                "title": "Index With"
            },
            {
                "category": "Edlin",
                "command": "edlin.trim",
                "title": "Trim"
            },
            {
                "category": "Edlin",
                "command": "edlin.ltrim",
                "title": "Trim Left (Head)"
            },
            {
                "category": "Edlin",
                "command": "edlin.rtrim",
                "title": "Trim Right (Tail)"
            },
            {
                "category": "Edlin",
                "command": "edlin.removeBlankLine",
                "title": "Remove Blank Lines"
            },
            {
                "category": "Edlin",
                "command": "edlin.split",
                "title": "Split Line"
            },
            {
                "category": "Edlin",
                "command": "edlin.splitAndKeep",
                "title": "Split Line (Keep)"
            },
            {
                "category": "Edlin",
                "command": "edlin.combine",
                "title": "Combine Line"
            },
            {
                "category": "Edlin",
                "command": "edlin.combineWith",
                "title": "Combine Line With"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "editorHasSelection",
                    "command": "edlin.index",
                    "group": "edlin@1"
                },
                {
                    "when": "editorHasSelection",
                    "command": "edlin.indexWith",
                    "group": "edlin@1"
                },
                {
                    "when": "editorHasSelection",
                    "command": "edlin.trim",
                    "group": "edlin@1"
                },
                {
                    "when": "editorHasSelection",
                    "command": "edlin.ltrim",
                    "group": "edlin@1"
                },
                {
                    "when": "editorHasSelection",
                    "command": "edlin.rtrim",
                    "group": "edlin@1"
                },
                {
                    "when": "editorHasSelection",
                    "command": "edlin.removeBlankLine",
                    "group": "edlin@1"
                },
                {
                    "when": "editorHasSelection",
                    "command": "edlin.split",
                    "group": "edlin@1"
                },
                {
                    "when": "editorHasSelection",
                    "command": "edlin.splitAndKeep",
                    "group": "edlin@1"
                },
                {
                    "when": "editorHasSelection",
                    "command": "edlin.combine",
                    "group": "edlin@1"
                },
                {
                    "when": "editorHasSelection",
                    "command": "edlin.combineWith",
                    "group": "edlin@1"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}