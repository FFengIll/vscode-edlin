{
    "name": "edlin",
    "displayName": "edlin",
    "description": "Trim, Remove, Split, Combine, Index for Line Edit and so on (so it is Edlin)",
    "author": {
        "name": "FFengIll"
    },
    "repository": {
        "url": "https://github.com/FengYouzheng/vscode-edlin"
    },
    "version": "0.5.0",
    "publisher": "FFengIll",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:edlin.wrap",
        "onCommand:edlin.index",
        "onCommand:edlin.indexFrom",
        "onCommand:edlin.trim",
        "onCommand:edlin.ltrim",
        "onCommand:edlin.rtrim",
        "onCommand:edlin.splitAndKeep",
        "onCommand:edlin.split",
        "onCommand:edlin.combine",
        "onCommand:edlin.combineWith",
        "onCommand:edlin.removeBlankLine"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "title": "Edlin",
        "commands": [
            {
                "category": "Edlin",
                "command": "edlin.wrap",
                "title": "Wrap Line"
            },
            {
                "category": "Edlin",
                "command": "edlin.index",
                "title": "Index"
            },
            {
                "category": "Edlin",
                "command": "edlin.indexFrom",
                "title": "Index From"
            },
            {
                "category": "Edlin",
                "command": "edlin.trim",
                "title": "Trim"
            },
            {
                "category": "Edlin",
                "command": "edlin.ltrim",
                "title": "Trim Left (Head)"
            },
            {
                "category": "Edlin",
                "command": "edlin.rtrim",
                "title": "Trim Right (Tail)"
            },
            {
                "category": "Edlin",
                "command": "edlin.removeBlankLine",
                "title": "Remove Blank Lines"
            },
            {
                "category": "Edlin",
                "command": "edlin.split",
                "title": "Split Line"
            },
            {
                "category": "Edlin",
                "command": "edlin.splitAndKeep",
                "title": "Split Line (Keep)"
            },
            {
                "category": "Edlin",
                "command": "edlin.combine",
                "title": "Combine"
            },
            {
                "category": "Edlin",
                "command": "edlin.combineWith",
                "title": "Combine With"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "editorHasSelection",
                    "command": "edlin.wrap",
                    "group": "edlin@1"
                },
                {
                    "when": "editorHasSelection",
                    "command": "edlin.index",
                    "group": "edlin@1"
                },
                {
                    "when": "editorHasSelection",
                    "command": "edlin.indexFrom",
                    "group": "edlin@1"
                },
                {
                    "when": "editorHasSelection",
                    "command": "edlin.trim",
                    "group": "edlin@1"
                },
                {
                    "when": "editorHasSelection",
                    "command": "edlin.ltrim",
                    "group": "edlin@1"
                },
                {
                    "when": "editorHasSelection",
                    "command": "edlin.rtrim",
                    "group": "edlin@1"
                },
                {
                    "when": "editorHasSelection",
                    "command": "edlin.removeBlankLine",
                    "group": "edlin@1"
                },
                {
                    "when": "editorHasSelection",
                    "command": "edlin.split",
                    "group": "edlin@1"
                },
                {
                    "when": "editorHasSelection",
                    "command": "edlin.splitAndKeep",
                    "group": "edlin@1"
                },
                {
                    "when": "editorHasSelection",
                    "command": "edlin.combine",
                    "group": "edlin@1"
                },
                {
                    "when": "editorHasSelection",
                    "command": "edlin.combineWith",
                    "group": "edlin@1"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "pnpm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "pnpm run compile && pnpm run lint",
        "lint": "eslint src --ext ts",
        "test": "pnpm run compile && node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "^20.19.24",
        "@types/sinon": "^17.0.3",
        "@types/vscode": "^1.74.0",
        "mocha": "^10.8.2",
        "sinon": "^18.0.1",
        "typescript": "^5.9.3",
        "vscode-test": "^1.6.1"
    }
}